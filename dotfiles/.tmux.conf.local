set -g status-left '#[fg=colour18,bg=colour153,bold] #S '

set -g status-bg colour67
set -g status-fg colour234
set -g pane-border-fg colour67
set -g pane-active-border-fg colour117

set-option -g default-command "reattach-to-user-namespace -l zsh"
set-option -g message-fg colour234
set-option -g message-bg colour81
set-option -g message-attr dim

# easier clearing
bind -n C-k clear-history
